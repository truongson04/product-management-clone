extends ../../layouts/default.pug

include ../../mixins/successAlert.pug
include ../../mixins/sort.pug

block main
    h1 Product Categories

    .card.mb-3
        .card-header
            | List
        .card-body
            .row
                .col-8
                .col-4.text-right
                    a.btn.btn-outline-success(href="/admin/product-category/create")
                        | Add new

    table.table.table-hover.table-sm(check-box-multi)
        thead
            tr
                th
                    input(type="checkbox", name="checkall")
                th Order
                th Thumbnail
                th Title
                th Position
                th Status
                th Action

        tbody
            each items, index in list
                tr
                    td
                        input(type="checkbox", name="id", value=items.id)

                    td #{index + 1}

                    td
                        img(
                            src=items.thumbnail,
                            width="100px",
                            height="auto"
                        )

                    td #{items.title}

                    td
                        input(
                            type="number",
                            name="position",
                            value=items.position || 1,
                            min=1,
                            style="width: 60px"
                        )

                    td
                        if items.status == "active"
                            a.badge.badge-success(
                                href="javascript:;",
                                button-change-status,
                                data-id=items.id,
                                data-status="active"
                            ) Active
                        else
                            a.badge.badge-danger(
                                href="javascript:;",
                                button-change-status,
                                data-id=items.id,
                                data-status="inactive"
                            ) Inactive

                    td
                        a.btn.btn-secondary.btn-sm(
                            href=`/admin/product-category/details/${items.id}`
                        ) Details
                        a.btn.btn-warning.btn-sm(
                            href=`/admin/product-category/edit/${items.id}`
                        ) Edit
                        button.btn.btn-danger.btn-sm.ml-1(
                            button-delete,
                            data-id=items.id
                        ) Delete

    script(src="/admin/js/products.js")
