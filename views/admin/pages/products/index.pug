extends ../../layouts/default.pug 
block main 
 table(class="table table-hover table-sm")
  thead 
   tr  
    th Order 
    th Thumbnail 
    th Title 
    th Price 
    th Status 
    th Action 
  tbody 
  each items, index in products 
   tr 
   td #{index+1}
   td 
    img(src= items.thumbnail, width="100px", height="auto")
   td #{items.title}
   td #{items.price}$
   td 
    if(items.status=="active")
     a(href="", class="badge badge-success") Active 
    else 
     a(href="", class="badge badge-danger") Inactive 
   td 
    button(class="btn btn-warning btn-sm") Edit
    button(class="btn btn-danger btn-sm ml-1") Delete
  