extends ../../layouts/default.pug 
include ../../mixins/successAlert.pug 
block main 
    h1(class="mb-4") Add new account 
    +errorAlert()
    form(
        action="/admin/accounts/create"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for='fullname') Fullname: 
            input(type="text", class="form-control", id="fullName", name="fullName", required)
        div(class="form-group")
            label(for='email') Email:  
            input(type="email", class="form-control", id="email", name="email", required)
        div(class="form-group")
            label(for='phone') Phone:   
            input(type="text", class="form-control", id="phone", name="phone", required)
        div(class="form-group")
            label(for='email') Password
            input(type="text", class="form-control", id="password", name="password", required)
        div(class="form-group", upload-image)
            label(for='avatar') Avatar
            input(type="file", class="form-control", id="avatar", name="avatar", accept="image/*", upload-image-preview)
        div(class="form-group")
            label(for='role_id') Role: 
            select(name="role_id", id="role_id", class="form-control")
                option(disabled) --Select--
                each items in roles 
                    option(value=items.id) #{items.title}
        div(class="form-group form-check form-check-inline")
            input(type="radio", class="form-check-input", id="statusActive", name="status", value="active", checked)
            label(for="statusActive", class="form-check-label") Active 
        div(class="form-group form-check form-check-inline")
            input(type="radio", class="form-check-input", id="statusInactive", name="status", value="inactive")
            label(for="statusInactive", class="form-check-label") Inactive
        div(class="form-group")
            button(type="submit", class="btn btn-primary") + Add new 
