extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
  div(class="container")
   div(class="row")
    div(class="col-12")
     +box-head("Product-List")
    

     
   div(class="row")
    each items in products 
     div(class="col-4 mb-3")
      div(class="product-item") 
       div(class="inner-image")
        img(src=items.thumbnail)
       div(class="inner-content")
          a(class="inner-title", href= `/products/${items.id}`) #{items.title}
          div(class="inner-price-new") #{Math.floor(parseFloat(items.price))}$
           div(class="inner-price-old") #{Math.ceil(parseFloat(items.price)+parseFloat(items.price*parseFloat(items.discountPercentage)/100))} $
           div(class="inner-price-discount") #{items.discountPercentage}%
