extends ../../layouts/default.pug 
include ../../mixins/successAlert.pug
block main 
    h1(class="mb-4") Roles and Permission 
    +successAlert()
    +errorAlert()
    div(class="card mb-3")
        div(class="card-header") List
        div(class="card-body")
            div(class="row")
                div(class="rol-8")
                div(class="rol-4 text-right")
                    a(href="/admin/roles/create", class="btn btn-outline-success") +Add new
    table(class="table table-hover table-sm")
        thead 
            tr
                th Number 
                th Role
                th Description 
                th Actions 
        tbody 
            if(roles.length>0)
                each items, index in roles 
                    tr 
                        td #{index+1} 
                        td #{items.title} 
                        td #{items.description} 
                        td
                            a(class="btn btn-secondary btn-sm ml-1", href=`/admin/roles/details/${items.id}`) Details
                            a(class="btn btn-warning btn-sm ml-1", href=`/admin/roles/edit/${items.id}`) Edit 
                            a(class="btn btn-danger btn-sm ml-1", href=`/admin/roles/delete/${items.id}`) Delete
            else 
                tr
                    td(colspan="4", class="text-center") There is no role created yet !               